<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Login">

    <ImageView
        android:layout_width="230sp"
        android:layout_height="230sp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="100sp"
        android:src="@drawable/logosawit"
        android:id="@+id/logoSawit"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/logoSawit"
        android:layout_centerInParent="true"
        android:text="Sawit App"
        android:fontFamily="sans-serif-medium"
        android:textColor="@color/sawit"
        android:layout_centerHorizontal="true"
        android:textSize="32sp"
        android:textStyle="bold"
        android:id="@+id/txtSawit"/>
    
    <Button
        android:layout_width="120dp"
        android:layout_height="74dp"
        android:background="@drawable/loginbtn"
        android:fontFamily="sans-serif-medium"
        android:text="Next"
        android:layout_below="@+id/txtSawit"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="120dp"
        android:id="@+id/lgnBtn"
        />



</RelativeLayout>